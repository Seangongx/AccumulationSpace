{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I/usr/local/include/DGtal",
                "-l:libDGtal.a",
                // /usr/bin/ld: note to link with /usr/local/lib/libDGtal.a use -l:libDGtal.a or rename it to liblibDGtal.a
                "-DQT_NO_VERSION_TAGGING",
                // /usr/local/lib/libDGtal.a(Common.cpp.o):(.qtversion[qt_version_tag]+0x0): undefined reference to `qt_version_tag'
                "-o",
                "${fileDirname}/Debug/${fileBasenameNoExtension}",
                //"-oQt5Core.so",///usr/lib/x86_64-linux-gnu/libQt5Core.so
                //"-oQt5Gui.so",///usr/lib/x86_64-linux-gnu/libQt5Gui.so
                // https://download.qt.io/archive/qt/5.15/5.15.3/single/ to install Qt again(NOTE: Don't execute ./configure in Chinese Directory)                                                                                                                                                                                                                                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
         }
